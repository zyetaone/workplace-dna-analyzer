{
	"name": "ppt-app",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"description": "Interactive workplace insights platform",
	"author": "rdtect <rick.d@zyeta.com>",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview --host",
		"start": "node build/index.js",
		"prepare": "svelte-kit sync",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:push": "drizzle-kit push",
		"db:setup": "node db-setup.js",
		"setup:admin": "node setup-admin.js",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:watch": "vitest --watch",
		"test:perf": "vitest --run perf",
		"perf:report": "node -e \"console.log(JSON.stringify(require('./src/lib/utils/performance.js').generatePerformanceReport(), null, 2))\"",
		"perf:clear": "node -e \"require('./src/lib/utils/performance.js').clearMetrics(); console.log('Performance metrics cleared');\"",
		"typecheck": "npx svelte-check --tsconfig ./tsconfig.json"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@libsql/client": "^0.14.0",
		"@sveltejs/adapter-node": "^5.3.1",
		"@sveltejs/kit": "^2.36.2",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@types/canvas-confetti": "^1.9.0",
		"@types/node": "^22",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"bits-ui": "^2.9.4",
		"canvas-confetti": "^1.9.3",
		"d3": "^7.9.0",
		"d3-cloud": "^1.2.7",
		"drizzle-kit": "^0.30.2",
		"drizzle-orm": "^0.40.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.1.0",
		"marked": "^16.2.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"qr": "^0.5.1",
		"svelte": "^5.38.3",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.1.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.1",
		"openai": "^5.16.0",
		"tailwind-merge": "^3.3.1",
		"valibot": "^1.1.0"
	}
}
